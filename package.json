{
  "name": "sentinal",
  "version": "0.0.1",
  "description": "Jam3 Quality advisor",
  "main": "src/index.js",
  "private": true,
  "scripts": {
    "test": "jest --watch",
    "test-ci": "jest --ci && npm run linters && npm run audit",
    "linters": "eslint './src/**/*.js'",
    "audit": "audit-ci --high",
    "release": "standard-version"
  },
  "engines": {
    "node": ">=10.15.0",
    "npm": ">=6.5.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "audit-ci": "1.3.1",
    "babel-eslint": "10.0.1",
    "chalk": "2.4.2",
    "envinfo": "7.0.0",
    "eslint": "5.16.0",
    "eslint-config-jam3": "2.0.0",
    "eslint-config-prettier": "4.0.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jest": "22.2.2",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "handlebars": "4.1.2",
    "husky": "2.1.0",
    "jest": "24.7.1",
    "js-yaml": "3.13.1",
    "lint-staged": "8.1.5",
    "prettier": "1.16.4",
    "standard-version": "4.4.0",
    "strip-ansi": "5.2.0",
    "text-table": "0.2.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**"
    ]
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "__tests__/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo 'Pre-commit checks...' && lint-staged",
      "pre-push": "echo 'Pre-push checks...' && npm run test-ci",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@sindresorhus/is": "0.17.0",
    "ajv": "6.10.0",
    "cosmiconfig": "5.2.0",
    "debug": "4.1.1",
    "lodash": "4.17.11",
    "mkdirp": "0.5.1",
    "optionator": "0.8.2"
  }
}
