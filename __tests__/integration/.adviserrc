{
  "rules": {
    "package-json-properties": [
      "error",
      {
        "required": ["private", "name", "version", "description", "main"],
        "blacklist": ["license", "author"]
      }
    ],
    "root-files": [
      "error",
      {
        "required": [".commitlintrc.yml", ".editorconfig", ".eslintrc", ".gitignore", ".prettierrc", "README"],
        "blacklist": ["LICENSE"]
      }
    ]
  }
}
